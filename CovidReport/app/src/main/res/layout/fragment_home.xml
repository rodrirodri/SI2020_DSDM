<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/textViewTotalTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/totalsTitle"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTotals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTotalTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/viewTotals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textViewTotalCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="48sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="9.999.999" />

                <TextView
                    android:id="@+id/labelTotalCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirmedCases"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTotalCases" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.33" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.67" />

                <TextView
                    android:id="@+id/textViewRecovered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideFirst"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelTotalCases"
                    tools:text="999.999" />

                <TextView
                    android:id="@+id/labelRecovered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/recoveredCases"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/textViewRecovered"
                    app:layout_constraintStart_toStartOf="@+id/textViewRecovered"
                    app:layout_constraintTop_toBottomOf="@+id/textViewRecovered" />

                <TextView
                    android:id="@+id/textViewCritical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideSecond"
                    app:layout_constraintStart_toStartOf="@+id/guideFirst"
                    app:layout_constraintTop_toTopOf="@+id/textViewRecovered"
                    tools:text="999.999" />

                <TextView
                    android:id="@+id/labelCritical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/criticalCases"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/textViewCritical"
                    app:layout_constraintStart_toStartOf="@+id/textViewCritical"
                    app:layout_constraintTop_toBottomOf="@+id/textViewCritical" />

                <TextView
                    android:id="@+id/textViewDeaths"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideSecond"
                    app:layout_constraintTop_toTopOf="@+id/textViewCritical"
                    tools:text="999.999" />

                <TextView
                    android:id="@+id/labelDeaths"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/deaths"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textViewDeaths"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDeaths" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBarTotals"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cardTotals"
            app:layout_constraintEnd_toEndOf="@+id/cardTotals"
            app:layout_constraintStart_toStartOf="@+id/cardTotals"
            app:layout_constraintTop_toTopOf="@+id/cardTotals" />

        <TextView
            android:id="@+id/textViewErrorTotals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:text="@string/errorMesssageTotals"
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cardTotals"
            app:layout_constraintEnd_toEndOf="@+id/cardTotals"
            app:layout_constraintStart_toStartOf="@+id/cardTotals"
            app:layout_constraintTop_toTopOf="@+id/cardTotals" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>